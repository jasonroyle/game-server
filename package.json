{
  "scripts": {
    "build": "npm run tsc",
    "build:watch": "npm run tsc:watch",
    "destroy": "rimraf app",
    "postinstall": "rimraf typings && typings install",
    "rebuild": "npm run destroy && npm run build",
    "rebuild:watch": "npm run destroy && npm run build:watch",
    "start": "pm2 startOrRestart ecosystem.json --env production",
    "start:development": "npm run rebuild && concurrently --raw \"npm run build:watch\" \"pm2-dev run ecosystem.json\"",
    "start:staging": "pm2 startOrRestart ecosystem.json --env staging",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch"
  },
  "devDependencies": {
    "concurrently": "2.2.0",
    "rimraf": "2.5.3",
    "typescript": "1.8.10",
    "typings": "1.3.1"
  },
  "dependencies": {
    "socket.io": "1.4.8"
  }
}
